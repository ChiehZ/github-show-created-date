{
  "manifest_version": 3,
  "name": "GitHub Repository Creation Time",
  "version": "1.0",
  "description": "Displays the creation time on GitHub repository pages",
  "permissions": ["activeTab"],
  "host_permissions": ["https://api.github.com/*", "https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}